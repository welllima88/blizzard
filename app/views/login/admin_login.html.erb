<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
                <%= form_tag(:action => 'admin_login') do %>
                    <fieldset>
						<% if session[:user] && !session[:user][:company_id].blank? %>
                            <%= hidden_field(:employee, :company_id, :value => session[:user][:company_id])%>
						<% else %>
                            <div class="form-group">
                                <input class="form-control" placeholder="Company ID" name="employee[company_id]" type="text" autofocus>
                            </div>
						<% end %>
                        <div class="form-group">
                            <input class="form-control" placeholder="Username" name="employee[username]" type="text">
                        </div>
                        <div class="form-group">
                            <input class="form-control" placeholder="Password" name="employee[password]" type="password" value="">
                        </div>
                        <!-- Change this to a button or input when using this as a form -->
                        <%= submit_tag("Login", :class => 'btn btn-lg btn-success btn-block')%>
                    </fieldset>
                <% end %>
            </div>
        </div>
    </div>
</div>

<style type="text/css" media="screen">
	body{background-image: url(/assets/loginBg.jpg);background-size:100%;background-size:cover;}
</style>