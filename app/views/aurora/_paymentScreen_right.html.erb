<!-- Payment Screen -->
<div id="paymentAreaRight" class="padding10">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-4">
			<a onClick="exitPaymentScreen()" class="btn btn-danger pull-right text-center" /><i class="fa fa-reply"></i> Back To Sale</a>
		</div>
	</div>
	<div class="right_box">
		<div class="right_box_padding">
			<a class="btn btn-wide btn-primary" id="btn-cashPaymentBox" onclick="setPaymentType('cashPaymentBox');"><i class="fa fa-money"></i> Cash</a>
			<a class="btn btn-wide btn-primary" id="btn-creditCardPaymentBox" onclick="setPaymentType('creditCardPaymentBox');"><i class="fa fa-credit-card"></i> Credit Card</a>
			<a class="btn btn-wide btn-primary" id="btn-giftCardPaymentBox" onclick="setPaymentType('giftCardPaymentBox');"><i class="fa fa-gift"></i> Gift Card</a>
			<a class="btn btn-wide btn-primary" id="btn-checkPaymentBox" onclick="setPaymentType('checkPaymentBox');"><i class="fa fa-university"></i> Check</a>
		</div>
	</div>
</div>