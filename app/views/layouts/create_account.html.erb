<html>
	<head>
		<title>Welcome to Evendra!</title>
		<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.0.min.js"></script>
		<meta type="description" content="Login to your evendra point of sale system">
		<%= stylesheet_link_tag 'login' %>
		<% if ['open_register'].include?(params[:action]) %>	
			<script type="text/javascript" src="/assets/jquery-latest.min.js"></script>
		<% end %>
		
		<!-- Google Tracking -->
		<script type="text/javascript" charset="utf-8">
			  var _gaq = _gaq || [];
			  _gaq.push(['_setAccount', 'UA-31452302-1']);
			  _gaq.push(['_setDomainName', 'evendra.com']);
			  _gaq.push(['_trackPageview']);

			  (function() {
			    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
			    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
			    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
			  })();
		</script>
		
		<script type="text/javascript">
		// When ready...
		window.addEventListener("load",function() {
			// Set a timeout...
			setTimeout(function(){
				// Hide the address bar!
				window.scrollTo(0, 1);
			}, 0);
		});
		</script>
	</head>
	<body>
		<%= yield %>
	</body>
</html>